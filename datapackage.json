{
  "name": "global-temp-time-series", 
  "title": "Global Temperature Anomalies Time Series", 
  "version": "0.1.0", 
  "license": "PDDL-1.0", 
  "sources": [
    {
      "name": "GISS Surface Temperature Analysis (GISTEMP)", 
      "web": "http://data.giss.nasa.gov/gistemp"
    }, 
    {
      "name": "Global component of Climate at a Glance (GCAG)", 
      "web": "http://www.ncdc.noaa.gov/cag/time-series/global"
    }
  ], 
  "resources": [
    {
      "name": "annual", 
      "path": "data/annual.csv", 
      "format": "csv", 
      "mediatype": "text/csv", 
      "schema": {
        "fields": [
          {
            "name": "Source", 
            "type": "string", 
            "description": ""
          }, 
          {
            "name": "Year", 
            "type": "date", 
            "description": "YYYY"
          }, 
          {
            "name": "Mean", 
            "type": "number", 
            "description": "Average mean temperature anomalies in degrees Celsius relative to a base period.\\nGISTEMP base period: 1951-1980\\nGCAG base period: 20th century average"
          }
        ]
      }
    }, 
    {
      "name": "monthly", 
      "path": "data/monthly.csv", 
      "format": "csv", 
      "mediatype": "text/csv", 
      "schema": {
        "fields": [
          {
            "name": "Source", 
            "type": "string", 
            "description": ""
          }, 
          {
            "name": "Date", 
            "type": "date", 
            "description": "YYYY-MM"
          }, 
          {
            "name": "Mean", 
            "type": "number", 
            "description": "Monthly mean temperature anomalies in degrees Celsius relative to a base period.\\nGISTEMP base period: 1951-1980\\nGCAG base period: 20th century average"
          }
        ]
      }
    }
  ]
}